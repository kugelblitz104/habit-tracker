{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "habit_tracker.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
                // "--workers", "1"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
